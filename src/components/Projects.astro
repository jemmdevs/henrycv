---
// Distribuir proyectos en 3 columnas
const column1 = [
  {
    name: "Notion",
    description: "DIGITAL TOOLMAKING",
    image: "/images/notion.avif",
    type: "image",
    link: "/projects/notion"
  },
  {
    name: "Apple",
    description: "CONVERSATIONAL AI",
    image: "/images/apple.mp4",
    type: "video",
    link: "/projects/apple"
  }
];

const column2 = [
  {
    name: "Multimodal Search",
    description: "BRAIN TECHNOLOGIES",
    image: "/images/multimodal.mp4",
    type: "video",
    link: "/projects/multimodal"
  },
  {
    name: "Brain Technologies",
    description: "CONVERSATIONAL AI",
    image: "/images/brain.avif",
    type: "image",
    link: "/projects/brain"
  },
  
];

const column3 = [
  {
    name: "Azuki",
    description: "CONSUMER PRODUCT",
    image: "/images/azuki.avif",
    type: "image",
    link: "/projects/azuki"
  },
  {
    name: "Notion",
    description: "DIGITAL TOOLMAKING",
    image: "/images/notion.avif",
    type: "image",
    link: "/projects/notion"
  },
  
];
---

<section class="px-3 py-6 max-w-[1800px] mx-auto">
  <!-- Container 12 columnas -->
  <div class="grid grid-cols-12 gap-3">
    <!-- Grid de proyectos: ocupa 12 columnas -->
    <div class="col-span-12 grid md:grid-cols-3 gap-3">
      
      <!-- Columna 1 -->
      <div class="flex flex-col gap-6">
        {column1.map((project) => (
          <a href={project.link} class="w-full transition-opacity hover:opacity-80 cursor-pointer block">
            {project.type === 'video' ? (
              <video 
                src={project.image}
                class="w-full h-auto object-cover"
                autoplay
                loop
                muted
                playsinline
              />
            ) : (
              <img 
                src={project.image} 
                alt={project.name}
                class="w-full h-auto object-cover"
              />
            )}
            <div class="mt-3">
              <h3 class="font-medium project-title">{project.name}</h3>
              <p class="uppercase" style="font-family: 'JetBrains Mono', monospace; font-size: 11.5px; line-height: 160%; letter-spacing: 0.08em; color: #71717a;">{project.description}</p>
            </div>
          </a>
        ))}
      </div>

      <!-- Columna 2 -->
      <div class="flex flex-col gap-6">
        {column2.map((project) => (
          <a href={project.link} class="w-full transition-opacity hover:opacity-80 cursor-pointer block">
