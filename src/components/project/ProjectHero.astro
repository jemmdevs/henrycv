---
interface Props {
  content: string;
  isVideo?: boolean;
  objectFit?: "cover" | "contain";
}

const { content, isVideo = false, objectFit = "cover" } = Astro.props;
---

<div
  class="col-span-12 h-[60vw] md:h-[50vw] mb-2 md:mb-6 overflow-hidden relative select-none"
>
  {
    isVideo ? (
      <video
        src={content}
        class={`w-full h-full object-${objectFit}`}
        autoplay
        loop
        muted
        playsinline
      />
    ) : (
      <img
        src={content}
        alt="Project hero"
        class={`w-full h-full object-${objectFit}`}
      />
    )
  }
</div>
