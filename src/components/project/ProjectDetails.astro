---
interface Props {
  role?: string | string[];
  collaborators?: string | string[];
  duration?: string;
  tools?: string | string[];
}

const { role, collaborators, duration, tools } = Astro.props;
---

<!-- Mobile: 2 filas × 2 cols, Desktop: 1 fila × 4 cols dentro de cols 5-12 -->{
  role && (
    <div class="col-start-1 col-end-7 md:col-start-5 md:col-end-7 md:mb-8">
      <p class="text-white/40 caption-text uppercase mb-1">Role</p>
      <div class="text-white body-text">
        {Array.isArray(role)
          ? role.map((r) => <span class="block">{r}</span>)
          : role}
      </div>
    </div>
  )
}

{
  collaborators && (
    <div class="col-start-7 col-end-13 md:col-start-7 md:col-end-9 md:mb-8">
      <p class="text-white/40 caption-text uppercase mb-1">Collaborators</p>
      <div class="text-white body-text">
        {Array.isArray(collaborators)
          ? collaborators.map((c) => <span class="block">{c}</span>)
          : collaborators}
      </div>
    </div>
  )
}

{
  duration && (
    <div class="col-start-1 col-end-7 mb-8 md:col-start-9 md:col-end-11">
      <p class="text-white/40 caption-text uppercase mb-1">Duration</p>
      <p class="text-white body-text">{duration}</p>
    </div>
  )
}

{
  tools && (
    <div class="col-start-7 col-end-13 mb-8 md:col-start-11 md:col-end-13">
      <p class="text-white/40 caption-text uppercase mb-1">Tools</p>
      <div class="text-white body-text">
        {Array.isArray(tools)
          ? tools.map((tool) => <span class="block">{tool}</span>)
          : tools}
      </div>
    </div>
  )
}

<style>
  .caption-text {
    font-family: "JetBrains Mono", monospace;
    font-size: 11.5px;
    line-height: 160%;
    letter-spacing: 0.08em;
  }

  .body-text {
    font-size: 14px;
    line-height: 140%;
    font-weight: 500;
  }

  @media (min-width: 768px) {
    .body-text {
      font-size: 15px;
    }
  }
</style>
