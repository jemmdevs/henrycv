---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import ProjectHero from "../../components/project/ProjectHero.astro";
import ProjectTitle from "../../components/project/ProjectTitle.astro";
import ProjectBody from "../../components/project/ProjectBody.astro";
import ProjectDetails from "../../components/project/ProjectDetails.astro";
import LinkCard from "../../components/project/LinkCard.astro";
import ProjectMedia from "../../components/project/ProjectMedia.astro";
import Divider from "../../components/project/Divider.astro";
import Spacer from "../../components/project/Spacer.astro";
---

<Layout title="General Dynamics - José Enrique">
    <!-- Contenido Principal - z-index ALTO + background sólido -->
    <div class="relative z-[200] bg-background">
        <div class="bg-background pb-8">
            <Navbar showClose={true} />
            <div style="padding-top: 20px;">
                <!-- Main Container -->
                <main class="min-h-[70vh]">
                    <!-- Grid Container -->
                    <div class="px-3 pt-0 pb-6 max-w-[1800px] mx-auto">
                        <div class="grid grid-cols-12 gap-3">
                            <!-- Hero -->
                            <ProjectHero
                                content="/images/GDELS.svg"
                                objectFit="cover"
                            />

                            <!-- Título sticky (izquierda) -->
                            <ProjectTitle role="AEROSPACE AND DEFENSE">
                                General Dynamics
                            </ProjectTitle>

                            <!-- Descripción (derecha) -->
                            <ProjectBody col={2}>
                                <p class="mb-4">
                                    During 2025, I modernized GDELS’s digital
                                    infrastructure by migrating legacy systems
                                    and upgrading React applications to v19. <br
                                    /> I focused on developing a modular component
                                    architecture to improve frontend scalability and
                                    long-term code maintainability.
                                </p>
                                <p>
                                    I designed a secure administration panel for
                                    asset management under strict compliance
                                    standards. Throughout the project, I served
                                    as a technical liaison to align engineering
                                    solutions with business operational
                                    requirements.
                                </p>
                            </ProjectBody>

                            <!-- Detalles -->
                            <ProjectDetails
                                role="Full Stack Developer"
                                collaborators="Adrían Doña"
                                duration="2025"
                                tools={["React", "Node.js"]}
                            />

                            <!-- Links -->
                            <LinkCard col={1} href="https://www.gdels.com/">
                                gdels.com
                            </LinkCard>

                            <LinkCard
                                col={2}
                                href="https://x.com/GDELS_Official"
                            >
                                Twitter
                            </LinkCard>

                            <!-- Divisor -->
                            <Divider />

                            <!-- Sección 1 -->
                            <ProjectBody title="Overview" col={1}>
                                Description of the project.
                            </ProjectBody>

                            <ProjectMedia src="/images/GDELS.svg">
                                Project placeholder image
                            </ProjectMedia>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <Footer />
</Layout>
